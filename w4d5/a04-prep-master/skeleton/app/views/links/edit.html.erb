<h1>Edit Link</h1>

<form action="<%= link_url %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="link[user_id]" value="<%=current_user.id %>">
  <%=auth_token %>
  <label for="title">Title: </label>
  <input id="title" type="text" name="link[title]" value="<%=@link.title %>">

  <label for="url">URL: </label>
  <input id="url"type="text" name="link[url]" value="<%=@link.url %>">

  <input type="submit" name="" value="Update Link">

</form>
